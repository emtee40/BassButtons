{
	"manifest_version": 2,
	"name": "The Bass Buttons",
	"version": "2.1.0",
	"background": { "scripts": [ "jquery.min.js",
								 "firebase.js",
								 "background.js" ] },
	"description": "Rattling Chrome with the best in bass music!",
	"content_security_policy": "script-src 'self' https://cdn.firebase.com https://*.firebaseio.com; object-src 'self'",

	"icons": { "16" : "icon16.png",
			   "48" : "icon48.png",
			   "128" : "icon128.png" },
	"browser_action":
	{
    	"default_icon": "icon512.png",
    	"default_popup": "popup.html"
  	},
  	"permissions": [  "notifications", "<all_urls>", "http://www.hardcoreradio.nl/*" ],
	"web_accessible_resources": [
		"icon16.png",
		"icon48.png",
		"icon128.png"
	]
}
